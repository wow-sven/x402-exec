{
  "name": "@x402x/client",
  "version": "0.1.0",
  "description": "Client SDK for x402x Serverless Mode - execute on-chain contracts directly via facilitator",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write \"**/*.{ts,tsx,js,jsx,cjs,json,md}\"",
    "format:check": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --check \"**/*.{ts,tsx,js,jsx,cjs,json,md}\""
  },
  "keywords": [
    "x402",
    "x402x",
    "serverless",
    "payment",
    "blockchain",
    "ethereum",
    "web3",
    "usdc",
    "settlement"
  ],
  "author": "Nuwa Protocol",
  "license": "Apache-2.0",
  "dependencies": {
    "@x402x/core": "workspace:*",
    "viem": "^2.21.54",
    "x402": "npm:@x402x/x402@0.6.6-patch.2"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "wagmi": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "wagmi": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@vitest/coverage-v8": "1.6.1",
    "@vitest/ui": "^1.6.0",
    "prettier": "3.5.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  }
}
