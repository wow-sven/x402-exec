{
  "name": "@x402x/react",
  "version": "0.1.0",
  "description": "React hooks for x402x settlement framework",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "format": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write \"**/*.{ts,js,cjs,json,md}\"",
    "format:check": "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --check \"**/*.{ts,js,cjs,json,md}\""
  },
  "keywords": [
    "x402",
    "x402x",
    "react",
    "hooks",
    "payment",
    "settlement"
  ],
  "author": "Nuwa Protocol",
  "license": "Apache-2.0",
  "dependencies": {
    "@x402x/core": "workspace:*",
    "@x402x/fetch": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.0.0",
    "jsdom": "^23.0.0",
    "prettier": "3.5.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "viem": "^2.21.26",
    "vitest": "^1.0.0",
    "wagmi": "^2.15.6"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "viem": "^2.21.26",
    "wagmi": "^2.15.6"
  }
}
