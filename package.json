{
	"name": "x402-settle-monorepo",
	"version": "1.0.0",
	"private": true,
	"description": "X402 Settlement Extension with Examples",
	"packageManager": "pnpm@10.7.0",
	"scripts": {
		"install:web": "pnpm install -C web --ignore-workspace",
		"install:all": "pnpm install",
		"build": "pnpm run build:x402 && pnpm run build:sdk && pnpm run build:examples && pnpm run build:facilitator",
		"build:x402": "pnpm --filter='./deps/x402/typescript/packages/**' run build",
		"build:sdk": "pnpm --filter='./typescript/packages/**' run build",
		"build:examples": "pnpm --filter='./examples/**' run build",
		"build:showcase": "pnpm run build:sdk && pnpm --filter='./examples/showcase/**' run build",
		"build:server": "pnpm run build:sdk && pnpm --filter=x402-exec-showcase-server build",
		"build:client": "pnpm run build:sdk && pnpm --filter=x402-exec-showcase-client build",
		"build:facilitator": "pnpm run build:sdk && pnpm --filter='@x402x/facilitator' build",
		"dev": "pnpm --filter=x402-exec-showcase dev",
		"dev:server": "pnpm --filter=x402-exec-showcase-server dev",
		"dev:client": "pnpm --filter=x402-exec-showcase-client dev",
		"dev:facilitator": "pnpm --filter='@x402x/facilitator' dev",
		"clean": "pnpm -r exec rm -rf node_modules dist",
		"clean:build": "pnpm -r exec rm -rf dist",
		"format": "pnpm --filter='./typescript/packages/**' run format",
		"format:check": "pnpm --filter='./typescript/packages/**' run format:check"
	},
	"devDependencies": {
		"prettier": "3.5.2",
		"turbo": "^2.5.0"
	},
	"pnpm": {
		"overrides": {
			"viem": "^2.21.26",
			"wagmi": "^2.15.6"
		}
	}
}
