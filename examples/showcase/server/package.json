{
  "name": "x402-exec-showcase-server",
  "version": "1.0.0",
  "description": "x402-exec Showcase - Backend Server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && pnpm run copy-static",
    "copy-static": "mkdir -p dist/static && cp -r static/* dist/static/",
    "start": "node dist/index.js",
    "format": "prettier --config ../.prettierrc --ignore-path ../.prettierignore --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --config ../.prettierrc --ignore-path ../.prettierignore --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@x402/core": "2.0.0",
    "@x402/hono": "2.0.0",
    "@x402/evm": "2.0.0",
    "@x402x/core_v2": "workspace:*",
    "@x402x/facilitator_v2": "workspace:*",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "hono": "^4.5.0",
    "viem": "^2.21.26"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "prettier": "3.5.2",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0"
  }
}
